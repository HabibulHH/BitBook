<!DOCTYPE html>
<html>
<head>
    @using BitBookProject.Models

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="img/favicon.png">
    <title>BitBok</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Design Content/bootstrap-3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Design Content/assets/css/animate.min.css" rel="stylesheet">
    <link href="~/Design Content/font-awesome-4.4.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Design Content/assets/css/timeline.css" rel="stylesheet">
    <script src="~/Design Content/assets/js/jquery.1.11.1.min.js"></script>
    <script src="~/Design Content/bootstrap-3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Design Content/assets/js/custom.js"></script>

    <link href="~/Design Content/assets/css/Custom.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->


    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>

    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>





</head>
<body class="animated fadeIn">

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-principal">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">
                    <b>BitBook</b>
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <div class="col-md-5 col-sm-4">
                    <form class="navbar-form">
                        <div class="form-group" style="display:inline;">
                            <div class="input-group" style="display:table;">
                                <input class="form-control" name="search" placeholder="Search..." autocomplete="off" type="text">
                                <span class="input-group-addon" style="width:1%;">
                                    <span class="glyphicon glyphicon-search"></span>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="profile.html">
                            @{ User User = (User)Session["User"];}
                            @User.Name

                            <img src="~/Design Content/img/Friends/guy-9.jpg" class="img-nav">
                        </a>
                    </li>
                    <li><a href="home.html"><i class="fa fa-bars"></i>&nbsp;Home</a></li>
                    <li><a href="messages.html"><i class="fa fa-comments"></i></a></li>
                    <li>
                        @using (Html.BeginForm("LogOut", "Account", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
                        {
                            <input type="submit" class="btn btn-info .btn-lg" value="Log out">
                        }
                    </li>
                    <li><a href="#" class="nav-controller"><i class="fa fa-user"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:66px;">
        @RenderBody()

        <hr />

        <footer class="welcome-footer">
            <div class="container">
                <p>
                    <div class="footer-links">
                        <a href="#">Terms of Use</a> |

                        <a href="#">Privacy Policy</a> |

                        <a href="#">Developers</a> |

                        <a href="#">Contact</a> |

                        <a href="#">About</a>
                    </div>
                    Copyright &copy; Company - All rights reserved

                </p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
